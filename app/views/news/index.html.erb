

<div class="card-container-news">
  <% @news.each do |news| %>
    <div class="card-product-news">
      <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" />
      <div class="card-product-infos-news">
        <h2><%= news.title %></h2>
        <h3>Author: <%= news.author %></h3>
        <p>Published <%= news.date %></p>
        <p><%= news.description %></p>
        <p><%= news.link %></p>
      </div>
    </div>
  <% end %>
</div>
