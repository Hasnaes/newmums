

<div class="card-container-news">
  <% @news.each do |news| %>
    <div class="card-product-news">
      <%= cl_image_tag news.photo.key, width: 150, height: 150, crop: :fill%>
      <div class="card-product-infos-news">
        <h2><%= news.title %></h2>
        <h3><%= news.author %> | <%= news.date %></h3>
        <p><%= news.description %></p>
        <p><%= news.link %></p>
      </div>
    </div>
  <% end %>
</div>
